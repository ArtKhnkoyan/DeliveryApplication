<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_finish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/finish_stop_background"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="26dp"
    android:paddingEnd="16dp"
    android:paddingBottom="26dp">

    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_ok_inside_circle"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tv_finish_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray"
                android:textSize="15sp"
                tools:text="123456" />

            <TextView
                android:id="@+id/tv_finis_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_gray"
                android:textSize="18sp"
                tools:text="fgghtrhyjytjyukyiki" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>