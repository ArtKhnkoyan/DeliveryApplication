<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_close"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_rec_item_background"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="26dp"
        android:paddingEnd="16dp"
        android:paddingBottom="26dp">

        <TextView
            android:id="@+id/tv_close_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/close_view_circle"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_close_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textSize="18sp"
                    tools:text="12345" />

                <ImageView
                    android:id="@+id/ic_close_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@+id/tv_close_estimate_time"
                    android:src="@drawable/ic_circle"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_close_estimate_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_gray"
                    android:textSize="18sp"
                    tools:text="08:00" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_close_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="0.6"
                    android:textColor="@color/color_gray"
                    android:textSize="15sp"
                    tools:text="ssssssssssseffffffffffffffff" />

                <TextView
                    android:id="@+id/tv_close_delivery_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.4"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="18sp"
                    tools:text="08:00-10:00" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>